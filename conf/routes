# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Index
GET        /                                          controllers.Application.index(any = "")

# Movies
GET        /api/movies                                controllers.MovieController.list
GET        /api/movies/top                            controllers.MovieController.top
GET        /api/movies/search/:query                  controllers.MovieController.search(query)
GET        /api/movies/:id                            controllers.MovieController.show(id: Int)

# Users
GET        /api/users                                 controllers.UserController.list
GET        /api/users/:id                             controllers.UserController.show(id: Int)

# Ratings
GET        /api/ratings/movie/:movieId                controllers.RatingController.listByMovie(movieId)
GET        /api/ratings/user/:userId                  controllers.RatingController.listByUser(userId)
GET        /api/ratings/recommendation/:userId        controllers.RatingController.recommendMovies(userId)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                              controllers.Assets.at(path="/public", file)
# WebJars
GET        /webjars/*file                             controllers.WebJarAssets.at(file)

GET        /*any                                      controllers.Application.index(any)
